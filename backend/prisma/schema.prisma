
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  username     String        @unique
  password     String
  anxietyForms AnxietyForm[] // Relation to the AnxietyForm model
}

model AnxietyForm {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     Int      // Anxiety score based on the form
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
