
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  username     String        @unique
  password     String
  anxietyForms AnxietyForm[]
  depForms DepForm[]
  profiles Profile[]
}

model AnxietyForm {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     String
  risk      String?
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model DepForm {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     Int
  risk      String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Profile {
  id                 Int    @id @default(autoincrement())
  userId             Int    @unique
  nationality        String
  gender             String
  ageGroup           String
  orientation        String
  relationshipStatus String
  user               User   @relation(fields: [userId], references: [id])
}