
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  username     String        @unique
  password     String
  anxietyForms AnxietyForm[]
  depForms DepForm[]
  profiles Profile[]
  hopelessnesss Hopelessness[]
  bodyimageforms bodyImageForm[]
}


model DepForm {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     Int
  risk      String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Profile {
  id                 Int    @id @default(autoincrement())
  userId             Int    @unique
  nationality        String
  gender             String
  ageGroup           String
  orientation        String
  relationshipStatus String
  user               User   @relation(fields: [userId], references: [id])
}

model AnxietyForm {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     Int
  risk      String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Hopelessness {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  score      Int
  riskLevel  String
  createdAt  DateTime @default(now())
}

model bodyImageForm {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  score        Int
  satisfaction String
  createdAt    DateTime @default(now())
}